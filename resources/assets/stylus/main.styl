bg_content = #EAEAEA
bg_message = #F3F3F4
bg_nav = #003E59
bg_nav_hover = #094661
bg_logo = #103A4C
color_border_bottom = #C7CBD4
color_border_nav = #00A0E3
color_message = #777

body
    font-size 16px
    height 100%

label
    font-size .9em

ul
    margin 0
    padding 0

.active-page
    font-weight 600
    
.border-bottom
    border-bottom 1px solid color_border_bottom

.bootstrap-switch-label
    font-weight bold
    
.content-wrapper
    background bg_content
    color bg_nav
    margin 0 0 0 220px

.error-ajax
    color red

.form-mep
    margin-bottom 1em

.list-inline-block
    ul
        li
            display inline-block
            a
                color #757481
                font-size 0.9em
                text-decoration none
                padding-right 1em

.logo
    background-color bg_logo

.logo a img
    width 50%
    
.green
    color green
    
.menu
    .icon-menu
        font-size .75em
        margin-right 0
        top .45em
    .glyphicon
        margin-right .5em
    .nav
        li
            a
                color color_border_bottom
                font-size .85em
            a:hover
                background-color bg_nav_hover
                color white
            a:focus
                background-color bg_nav_hover
                color white
        li.active
            border-left 4px solid color_border_nav
            background bg_nav_hover
            a
                padding-left 0.8em
        .submenu
            .nav
                display none
                li
                    a
                        padding 0.4em 0 .4em 2.5em
                li:last-child
                    margin-bottom .5em
     
.message
    background bg_message
    color color_message
    font-size .9em
    font-weight 400
    line-height 2em
    padding .5em
    ul
        li
            a
                font-size 1em !important
    .col-md-4
        padding-left 0.6em
        span
            color #3B728A
    .glyphicon
        margin-right .5em

.nav-wrapper
    background bg_nav
    color bg_content
    height 100%
    overflow auto
    position fixed
    top 0px
    width 220px

.paddingWrapper
    padding 1em

.page
    background none repeat scroll 0% 0% #F9F9F9
    border-bottom 1px solid #E7EAEC
    color #757481
    padding-left 1em
    padding-bottom 0.5em
    h2
        font-size 1.25em
        margin 0
        padding 0.25em 0
    li:after
        content ' /'
    li:last-child:after
        content ''
    li
        a
            padding-right 0 !important
            font-size 0.8em !important

.red
    color red

.row
    margin 0

.row
    .bootstrap-switch
        margin-bottom .5em

.success-ajax
    color green

.table-data
    background white
    border-top 3px solid bg_nav
    box-shadow 0px 1px 3px 0px rgba(0,0,0,0.75)

.table-header
    border-bottom 1px solid color_border_bottom
    font-family Arial
    padding .5em

.table-content
    font-size .8em
    padding 1em
    table
        margin-top 1em

.table-content
    thead
        tr
            background-color bg_content
            th
                text-align center
    .edit-row
        a
            padding-left 1em
            font-size 1.1em
        a:hover
            text-decoration none